{
  "name": "prompter-fresh",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run src/test/integration.test.ts",
    "test:business": "vitest run src/test/business-logic.test.ts",
    "test:e2e": "vitest run src/test/e2e-app-flows.test.tsx",
    "test:all": "vitest run src/test/",
    "test:watch": "vitest --watch",
    "test:debug": "vitest --inspect-brk",
    "cap:add": "npx cap add",
    "cap:copy": "npx cap copy",
    "cap:sync": "npx cap sync",
    "cap:open": "npx cap open",
    "android": "npm run build && npx cap copy android && npx cap open android",
    "android:sync": "npm run build && npx cap sync android",
    "android:bundle": "npm run build && npx cap copy android && cd android && ./gradlew bundleRelease",
    "android:assemble": "npm run build && npx cap copy android && cd android && ./gradlew assembleRelease",
    "ios": "npm run build && npx cap copy ios && npx cap open ios",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@capacitor/android": "^6.2.1",
    "@capacitor/app": "6.0.1",
    "@capacitor/core": "^6.2.1",
    "@capacitor/device": "^6.0.0",
    "@capacitor/haptics": "6.0.1",
    "@capacitor/ios": "^6.0.0",
    "@capacitor/keyboard": "6.0.2",
    "@capacitor/splash-screen": "6.0.2",
    "@capacitor/status-bar": "6.0.1",
    "axios": "^1.9.0",
    "i18n-js": "^4.5.1",
    "install": "^0.13.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.28.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.2.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.0.4",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "jsdom": "^23.0.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.37.0",
    "vite": "^5.4.10",
    "vite-plugin-pwa": "^0.20.5",
    "vitest": "^1.0.4"
  },
  "private": true
}
